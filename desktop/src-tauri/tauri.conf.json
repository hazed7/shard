{
  "$schema": "https://schema.tauri.app/config/2.0.2",
  "productName": "Shard Launcher",
  "version": "0.1.5",
  "identifier": "sh.shard.launcher",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "macOSPrivateApi": true,
    "windows": [
      {
        "label": "main",
        "title": "Shard Launcher",
        "width": 1280,
        "height": 760,
        "minWidth": 900,
        "minHeight": 600,
        "resizable": true,
        "decorations": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$HOME/.shard/**", "$DATA/**", "$APPDATA/**", "$LOCALAPPDATA/**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.15",
      "dmg": {
        "appPosition": { "x": 180, "y": 170 },
        "applicationFolderPosition": { "x": 480, "y": 170 },
        "windowSize": { "width": 660, "height": 400 }
      }
    },
    "windows": {
      "wix": {
        "language": "en-US"
      },
      "nsis": {
        "installMode": "currentUser"
      }
    },
    "linux": {
      "appimage": {
        "bundleMediaFramework": true
      },
      "deb": {
        "depends": ["libwebkit2gtk-4.1-0", "libappindicator3-1"]
      }
    }
  },
  "plugins": {
    "updater": {
      "endpoints": ["https://github.com/th0rgal/shard/releases/latest/download/latest.json"],
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDM5MTdFOEUwMzc5OTMyQjAKUldTd01wazM0T2dYT1JQczZEMzA1ejB3dzU1Vkt0Skx6M051T2U2ZGprR0dxY01LNlFKU1M4UHAK"
    },
    "deep-link": {
      "desktop": {
        "schemes": ["shard"]
      }
    }
  }
}
